{% extends 'bootstrap/base.html' %}
{% block title %}
    {% if title %}
        {{ title }} - Microblog
    {% else %}
        {{ _('Welcome to Microblog') }}
    {% endif %}
{% endblock %}
{% block navbar %}
    <nav class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button"
                        class="navbar-toggle collapsed"
                        data-toggle="collapse"
                        data-target="#bs-example-navbar-collapse-1"
                        aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ url_for('index') }}">Microblog</a>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="{{ url_for('index') }}">{{ _('Home') }}</a>
                    </li>
                    <li>
                        <a href="{{ url_for('explore') }}">{{ _('Explore') }}</a>
                    </li>
                    <li>
                        <a href="{{ url_for('order_form') }}">Order Form</a>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">常見問題<b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li>
                            <a href="#">聯絡我們</a>
                        </li>
                        <li><a href="#">退貨及售後支援</a></li>
                        <li><a href="#">購買流程</a></li>
                        <li><a href="#">付款方式</a></li>
                        <li><a href="#">除舊服務條款</a></li>
                        <li><a href="#">飛馬電腦節2021</a></li>
                         <li><a href="#">意見回饋</a></li>
                        <li><a href="#">關於我們</a></li>
                    </ul>
                </li>
                    <li>
                        <a href="{{ url_for('checkout') }}">checkout</a>
                    </li>
                    {% if current_user.is_anonymous %}
                        <li>
                            <a href="{{ url_for('login') }}">{{ _('Login') }}</a>
                        </li>
                    {% else %}
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">user<b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a href="{{ url_for('user', username=current_user.username) }}">{{ _('Profile') }}</a>
                                </li>
                                <li>
                                    <a href="{{ url_for('order_info') }}">Order Info</a>
                                </li>
                                <li>
                                    <a href="{{ url_for('logout') }}">{{ _('Logout') }}</a>
                                </li>
                            </ul>
                        </li>
                        
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>
{% endblock %}
{% block content %}
    <div class="container">
        {% with messages = get_flashed_messages() %}
            {% if messages %}
                {% for message in messages %}<div class="alert alert-info" role="alert">{{ message }}</div>{% endfor %}
            {% endif %}
        {% endwith %}
        {# application content needs to be provided in the app_content block #}
        {% block app_content %}{% endblock %}
    </div>
{% endblock %}
{% block scripts %}
    {{ super() }}
    {{ moment.include_moment() }}
    {{ moment.lang(g.locale) }}
{% endblock %}
