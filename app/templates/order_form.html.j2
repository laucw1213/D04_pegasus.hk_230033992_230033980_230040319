{% extends "base.html.j2" %}
{% import 'bootstrap/wtf.html' as wtf %}
{% block app_content %}
    <div class="row">
        <!-- Other Content -->
        <div class="col-lg-8">
            <h1>{{ title }}</h1>
            <!-- Product Search -->
            <form method="GET">
                <input type="text"
                       name="query"
                       placeholder="Search products"
                       value="{{ request.args.get('query', '') }}">
                <input type="submit" value="Search">
            </form>
            <!-- Category Selector -->
            <form method="POST" id="categoryForm">
                {{ form.hidden_tag() }}
                <div class="form-group">
                    <label for="category">Category</label>
                    <select name="category"
                            id="category"
                            class="form-control"
                            onchange="document.getElementById('categoryForm').submit();"
                            style="max-height: 200px;
                                   overflow-y: auto">
                        <option value="">
                            All
                        </option>
                        {% for category in categories %}
                            <option value="{{ category.id }}">
                                {{ category.name }}
                            </option>
                        {% endfor %}
                    </select>
                </div>
            </form>
            {% for product in products %}
                <div>
                    <h2>Product ID: {{ product.id }}</h2>
                    <h2>Product Name: {{ product.name }}</h2>
                    <h2>Product Price: {{ product.price }}</h2>
                    <!-- 顯示產品價格 -->
                    <!-- Add to Cart Button -->
                    <!-- Add to Cart Button -->
                    <form method="POST" action="{{ url_for('add_to_cart') }}">
                        <input type="hidden" name="product_id" value="{{ product.id }}">
                        <input type="submit" value="Add to Cart">
                    </form>
                </div>
            {% endfor %}
        </div>
            
            <!-- Cart Summary -->
        <div class="col-lg-4">
            <h3 class="bold">
                <i class="glyphicon glyphicon-th-list"></i> Cart Summary
            </h3>
            <div class="panel panel-primary">
                <div class="panel-body">Current Cart Value</div>
                <ul class="list-group">
                    <li class="list-group-item">
                        <p>
                            {{ quantity_total }} Items <strong class="pull-right">&dollar;{{ grand_total / 100 }}</strong>
                        </p>
                        <p>
                            24hr Shipping <strong class="pull-right">&dollar;10</strong>
                        </p>
                    </li>
                    {% for item, quantity in cart_items %}
                        <li class="list-group-item">
                            <p>Product Name: {{ item.name }}</p>
                            <p>Quantity: {{ quantity }}</p>
                        </li>
                    {% endfor %}
                    <li class="list-group-item">
                        <p>
                            Total <strong class="pull-right">&dollar;{{ grand_total_plus_shipping / 100 }}</strong>
                        </p>
                    </li>
                </ul>
                <div class="panel-footer">
                    {% if quantity_total>0 %}
                        <a href="{{ url_for('checkout') }}" class="btn btn-primary btn-sm">
                            Checkout <i class="glyphicon glyphicon-chevron-right"></i>
                        </a>
                    {% else %}
                        <a href="#" class="btn btn-primary btn-sm">
                            Checkout <i class="glyphicon glyphicon-chevron-right"></i>
                        </a>
                    {% endif %}
                    <a href="{{ url_for('order_form') }}"
                        class="btn btn-link btn-sm pull-right">
                        <i class="glyphicon glyphicon-chevron-left"></i> Continue Shopping
                    </a>
                </div>
            </div>
        </div>
    </div>
    {% endblock %}
